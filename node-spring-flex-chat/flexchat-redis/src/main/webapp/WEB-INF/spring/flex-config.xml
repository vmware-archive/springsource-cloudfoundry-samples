	<bean class="org.springsource.flexchat.event.SubscriptionInterceptor"/> -->
		
	<flex:message-broker mapping-order="1">
		<flex:mapping pattern="/messagebroker/*"/>
		<flex:message-service default-channels="longpolling-amf" />
	</flex:message-broker>
	
	<flex:integration-message-destination id="si-chat-receiver" message-channel="flexChatReceiver"/>
	
	<flex:integration-message-destination id="si-chat-pusher" message-channel="flexChatPusher"/>
	
</beans>